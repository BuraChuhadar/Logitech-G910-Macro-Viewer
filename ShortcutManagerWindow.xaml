<Window x:Class="G910_Logitech_Utilities.ShortcutManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shortcut Manager"
        Height="250"
        Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <TextBlock Text="Manage Shortcut Settings"
                    FontSize="16"
                    FontWeight="Bold"
                    Margin="0,0,0,20"/>
            <TextBlock Text="Current Shortcut:"
                    Margin="0,0,0,10"/>
            <TextBox Name="CurrentShortcutTextBox"
                    Width="200"
                    IsReadOnly="True"
                    Margin="0,0,0,10"/>
            <TextBlock Text="New Shortcut:"
                    Margin="0,0,0,10"/>
            <TextBox Name="NewShortcutTextBox"
                    Width="200"
                    Margin="0,0,0,10"/>
            <Button Name="SaveShortcutButton"
                    Content="Save Shortcut"
                    Width="150"
                    Click="SaveShortcutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
